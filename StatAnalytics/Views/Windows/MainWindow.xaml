<Window x:Class="StatAnalytics.MainWindow" mc:Ignorable="d"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:StatAnalytics"
        xmlns:vm ="clr-namespace:StatAnalytics.ViewModels"
        
        Title="{Binding Path=Title}" 
        Height="450" Width="800">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <TextBox 
            Margin="30,20"
            TextWrapping="Wrap"
            Width="200" Height="20"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Text="{Binding Title,UpdateSourceTrigger=PropertyChanged}" RenderTransformOrigin="0.5,0.5" >
        </TextBox>

    </Grid>
</Window>
